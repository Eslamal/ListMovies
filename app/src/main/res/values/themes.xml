<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/toolbarTextColor</item>
        <item name="colorControlActivated">@color/toolbarTextColor</item>
        <item name="colorControlHighlight">@color/toolbarTextColor</item>
    </style>

    <!-- Toolbar style -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbarBackground</item>
        <item name="android:titleTextColor">@color/toolbarTextColor</item>
    </style>
</resources>
